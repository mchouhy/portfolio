---
import Section from "./Section.astro";
import Badge from "./Badge.astro";
import SocialPills from "./SocialPills.astro";
---

<Section class="py-32 md:py-36 sm:min-h-screen">
      <div class="max-w-2xl">
            <div class="flex gap-5 mb-4">
