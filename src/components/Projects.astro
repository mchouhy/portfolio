---
import Section from "../components/Section.astro"
import Brackets from "../components/Brackets.astro"
---

<Section id="projects">
      <h2
            class="prjoects-title flex items-center tracking-tight text-3xl sm:text-5xl font-semibold mb-6 gap-x-3"
      >
      <Brackets class="size-8"/>      
      Projects
      </h2>
      <div class="wrapper">
            <div class="box box1">1</div>
            <div class="box box2">
               <div class="h-full flex justify-center items-center">
                     <video autoplay loop controls class="rounded-[32px] h-[85%] border shadow-2xl">
                           <source src="/videos/Guacha-video.mp4">
                     </video>  
               </div>
            </div>
            <div class="box box3">
                  <div class="h-full flex justify-center items-center">
                        <video autoplay loop class="rounded-[32px] h-[85%] border shadow-2xl">
                              <source src="/videos/Guacha-video.mp4">
                        </video>  
                  </div>
            </div>
            <div class="box box4">4</div>
            <div class="box box5">5</div>
            <div class="box box6">
                  <div class="h-full flex justify-center items-center">
                        <video autoplay loop class="rounded-[32px] h-[85%] border shadow-2xl">
                              <source src="/videos/Guacha-video.mp4">
                        </video>  
                  </div>
            </div>
            <div class="box box7">
                  <div class="h-full flex justify-center items-center">
                        <video autoplay loop class="rounded-[32px] h-[85%] border shadow-2xl">
                              <source src="/videos/Guacha-video.mp4">
                        </video>  
                  </div>
            </div>
            <div class="box box8">8</div>    
      </div>
</Section>
<style>
      .wrapper {
            display: grid;
            grid-gap: 3.6rem;
            grid-template-columns: repeat(2, minmax(1fr, 1fr));
            grid-template-rows: repeat(4, minmax(400px, 560px));
            grid-template-areas: "one  one two two  two"
                                 "three three three four four"
                                 "five  five six  six six"
                                 "seven seven seven eight eight";
      }

      .box {
            border-radius: 32px;
            min-height: 17.5rem;
            text-align: center;
            font-size: larger;
            font-weight: 900;
      }

      .box1 {grid-area: one;
            margin-inline-end: 0.5rem;
            background: rgba(0, 0, 0, 0.839);
            box-shadow:
                  0 10px 15px -3px rgb(0 0 0 / 0.1),
                  0 4px 6px -4px rgb(0 0 0 / 0.1);
            backdrop-filter: blur(8px);}
      .box2 {grid-area: two;
            margin-inline-end: 0.5rem;
            background: rgba(0, 0, 0, 0.2);
            box-shadow:
                  0 10px 15px -3px rgb(0 0 0 / 0.1),
                  0 4px 6px -4px rgb(0 0 0 / 0.1);
            backdrop-filter: blur(8px);}
      .box3 {grid-area: three;
            margin-inline-end: 0.5rem;
            background: rgba(209, 209, 213, 0.6);
            box-shadow:
                  0 10px 15px -3px rgb(0 0 0 / 0.1),
                  0 4px 6px -4px rgb(0 0 0 / 0.1);
            backdrop-filter: blur(8px);}
      .box4 {grid-area: four;
            margin-inline-end: 0.5rem;
            background: rgba(209, 209, 213, 0.6);
            box-shadow:
                  0 10px 15px -3px rgb(0 0 0 / 0.1),
                  0 4px 6px -4px rgb(0 0 0 / 0.1);
            backdrop-filter: blur(8px);}
      .box5 {grid-area: five;
            margin-inline-end: 0.5rem;
            background: rgba(209, 209, 213, 0.6);
            box-shadow:
                  0 10px 15px -3px rgb(0 0 0 / 0.1),
                  0 4px 6px -4px rgb(0 0 0 / 0.1);
            backdrop-filter: blur(8px);}
      .box6 {grid-area: six;
            margin-inline-end: 0.5rem;
            background: rgba(209, 209, 213, 0.6);
            box-shadow:
                  0 10px 15px -3px rgb(0 0 0 / 0.1),
                  0 4px 6px -4px rgb(0 0 0 / 0.1);
            backdrop-filter: blur(8px);}
      .box7 {grid-area: seven;
            margin-inline-end: 0.5rem;
            background: rgba(209, 209, 213, 0.6);
            box-shadow:
                  0 10px 15px -3px rgb(0 0 0 / 0.1),
                  0 4px 6px -4px rgb(0 0 0 / 0.1);
            backdrop-filter: blur(8px);}
      .box8 {grid-area: eight;
            margin-inline-end: 0.5rem;
            background: rgba(209, 209, 213, 0.6);
            box-shadow:
                  0 10px 15px -3px rgb(0 0 0 / 0.1),
                  0 4px 6px -4px rgb(0 0 0 / 0.1);
            backdrop-filter: blur(8px);}                  
      @media (max-width: 1150px) {
            .wrapper {
                  grid-template-columns: repeat(3, minmax(250px, 1fr));
                  grid-template-rows: repeat(4, minmax(250px, 1fr));
                  grid-template-areas: "one    one    five"
                                       "seven   two    three"
                                       "seven  six    three"
                                       "four  six  eight";
            }
      }
</style>
