---
const navLinks = [
      {
            class: "header-link",
            label: "experience",
            href: "/#experience",
            title: "Experience",
      },
      {
            class: "header-link",
            label: "projects",
            href: "/#projects",
            title: "Projects",
      },
      {
            class: "header-link",
            label: "about",
            href: "/#about",
            title: "About",
      },
      {
            class: "header-link",
            label: "contact",
            href: "/#contact",
            title: "Contact",
      },
];
---

<header class="flex justify-center items-center pt-4">
      <nav class="flex flex-row gap-x-6 text-sm font-medium">
            {
                  navLinks.map((link) => (
                        <a
                              class={link.class}
                              href={link.href}
                              aria-label={link.label}
                        >
                              {link.title}
                        </a>
                  ))
            }
      </nav>
</header>
      <style>
            .header-link:hover{
                  font-weight: 700;
                  background: -webkit-linear-gradient(
                        45deg,
                        #f8ab5e,
                        #f36961,
                        #a176c8,
                        #759beb,
                        #65beb3,
                        #70db96
                  );
                  -webkit-background-clip: text;
                  background-clip: text;
                  -webkit-text-fill-color: transparent;
            }
      </style>
